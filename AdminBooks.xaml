<Window x:Class="gestion_de_biblios.AdminBooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AdminBooks" Height="450" Width="800">
    <Grid Background="#FF00256D">
        <DataGrid x:Name="BooksDataGrid" AutoGenerateColumns="True" CanUserAddRows="False" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Button Content="Add Book" Click="AddBook_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Height="44" Width="100" FontWeight="Bold" />
        <Button Content="Remove Book" Click="RemoveBook_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="128,0,0,10" Height="44" Width="100" FontWeight="Bold" />
        <Button Content="Modify Book" Click="ModifyBook_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="256,0,0,10" Height="44" Width="100" FontWeight="Bold" />
        <Button Content="Return Home" Click="ReturnHome_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,316,10" Height="44" Width="100" RenderTransformOrigin="0.64,0.523" FontWeight="Bold" />
    </Grid>
</Window>
