<Window x:Class="gestion_de_biblios.AdminAddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdminAddBook" Height="350" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Title:"/>
            <TextBox x:Name="TitleTextBox" Width="200" Height="30" Margin="0,0,0,10"/>

            <Label Content="Author:"/>
            <TextBox x:Name="AuthorTextBox" Width="200" Height="30" Margin="0,0,0,10"/>

            <Label Content="Number of Pages:"/>
            <TextBox x:Name="PagesTextBox" Width="200" Height="30" Margin="0,0,0,10"/>

            <Label Content="Publication Date:"/>
            <DatePicker x:Name="PublicationDate" Width="200" Height="30" Margin="0,0,0,10"/>
            <Button Content="Add Book" Width="116" Height="32" Click="AddBook_Click" Background="#FF050048" Foreground="White" FontFamily="Arial Black"/>
        </StackPanel>
    </Grid>
</Window>
