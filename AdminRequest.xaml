<Window x:Class="gestion_de_biblios.AdminRequest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:gestion_de_biblios.models"
        Title="AdminRequest" Height="450" Width="800">
    <Grid Background="#FF001248">
        <DataGrid x:Name="RequestsDataGrid" AutoGenerateColumns="True" VerticalAlignment="Top" Height="300" />
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10,320,10,0">
            <Button Content="Accept" Click="AcceptRequest_Click" Margin="10" Height="48" Width="86" FontWeight="Bold"/>
            <Button Content="Reject" Click="RejectRequest_Click" Margin="10" Height="48" Width="86" FontWeight="Bold"/>
          
       
          <Button Content="Return Home" Click="ReturnToHome_Click" Margin="10" Width="89" FontWeight="Bold"/>
            <Button Content="Loan" Click="ViewLoan" Height="48" Width="100" FontWeight="Bold" />

        </StackPanel>
    </Grid>
</Window>
